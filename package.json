{
	"name": "rigged",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write .",
		"lint": "bunx --bun biome lint apps/web/ --max-diagnostics 50",
		"lint:fix": "bunx --bun biome lint apps/web/ --fix",
		"dev": "bun run --filter '*' dev",
		"build": "bun run --filter '*' build",
		"check-types": "bun run --filter '*' check-types",
		"dev:native": "bun run --filter native dev",
		"dev:web": "bun run --filter web dev",
		"dev:server": "bun run --filter server dev"
	},
	"dependencies": {},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0"
	},
	"packageManager": "bun@1.2.15"
}
